<div class="banner" style="background-image: linear-gradient(-225deg, rgba(100,100,100,0.2) 0%, rgba(100,100,100,0.6) 50%), url(<%= image_path('banner-doc.png') %>);">
  <div class="banner-content hidden-xs hidden-sm">

    <div class="banner-border">
      <div class="banner-title">
        <div>
          Direct'
        </div>
        <%= image_tag "logo.png", class: "logo-icon-large" %>
        <div>
          'Cuisines
        </div>
      </div>
      <div class="subline">
        <div class="subline-border">
          <div class="diamond"></div>
          <div class="diamond"></div>
        </div>
      </div>
    </div>

    <h2>Des produits frais et locaux, sans détours!</h2>

    <!-- Search form -->
    <form action="" class="banner-search">
      <input type="text" class="banner-search-input" placeholder="Tomates, Vins, Fromages...">
      <button type="submit" class="banner-search-btn">
        <i class="fa fa-search"></i>
      </button>
    </form>
  </div>

  <div class="circuit">
    <%= image_tag "circuit-court.png"%>
    <div class="circuit-text">
      <div class="client">
        Vous passez <span>commande</span>
      </div>
      <div class="grower">
        Nos <span>producteurs</span> préparent votre commande
      </div>
      <div class="delivery">
        Nous vous <span>livrons!</span>
      </div>
    </div>
  </div>

</div>
